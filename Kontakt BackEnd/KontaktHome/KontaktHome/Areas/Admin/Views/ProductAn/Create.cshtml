@model AdminProductVM
@{
    ViewData["Title"] = "Create";
}

<div class="content text-center">
    <div class="col-lg-6 ">
        <div class="card">
            <div class="card-header header-elements-inline">
                <h5 class="card-title">Məhsul yarat</h5>
                <a asp-action="Index" asp-route-categoryId="@ViewBag.CategoryId" class="btn btn-light">
                    Ləğv et
                </a>
            </div>
            <div class="card-body">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group form-group-float">
                        <input asp-for="@Model.Product.Name" class="form-control" placeholder="Adı">
                        <span class="text-danger" asp-validation-for="@Model.Product.Name"></span>
                    </div>
                    <div class="form-group row" id="photo">
                        <div class="col-lg-12">
                            <input asp-for="@Model.Product.Photos" class="file-input-custom" data-show-caption="true" data-show-upload="true" accept="image/*" data-fouc>
                        </div>
                        <span class="text-danger" asp-validation-for="@Model.Product.Photos"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="@Model.Product.Count" class="form-control" placeholder="Sayı">
                        <span class="text-danger" asp-validation-for="@Model.Product.Count"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="@Model.Product.Price" class="form-control" placeholder="Qiymet">
                        <span class="text-danger" asp-validation-for="@Model.Product.Price"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="@Model.Product.Discount" class="form-control" type="number" step=".1" min="1" max="100" placeholder="Endirim faizi">
                        <span class="text-danger" asp-validation-for="@Model.Product.Discount"></span>
                    </div>
                    <div class="mb-3 my-3" id="Brand">
                        <p class="mb-2">
                            <select data-placeholder="Brend Seç" name="BrandId" id="BrandId" class="form-control select-access-value select2-hidden-accessible" data-fouc="" tabindex="-1" aria-hidden="true">
                                <option></option>
                                @foreach (Brand brand in ViewBag.Brands)
                                {
                                    <option value="@brand.Id">@brand.Name</option>
                                }
                            </select>
                        </p>
                    </div>
                    @foreach (Features features in Model.Features)
                    {
                        <div class="form-group form-group-float">
                            <input required class="form-control" name="features[]" placeholder="@features.Name">
                            <span class="text-danger" for="features[]"></span>
                        </div>
                    }
                    <button type="submit" class="btn bg-blue">Göndər<i class="icon-paperplane ml-2"></i></button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Script{
    <partial name="_ValidationPartial" />
}

