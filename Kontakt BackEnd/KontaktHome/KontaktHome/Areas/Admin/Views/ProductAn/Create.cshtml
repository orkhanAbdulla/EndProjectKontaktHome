@model Product
@{
    ViewData["Title"] = "Create";
}

<div class="content text-center">
    <div class="col-lg-6 ">
        <div class="card">
            <div class="card-header header-elements-inline">
                <h5 class="card-title">Məhsul yarat</h5>
                <a asp-action="Index" class="btn btn-light">
                    Ləğv et
                </a>
            </div>
            <div class="card-body">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group form-group-float">
                        <input asp-for="@Model.Name" class="form-control" placeholder="Adı">
                        <span class="text-danger" asp-validation-for="@Model.Name"></span>
                    </div>
                    <div class="form-group row" id="photo">
                        <div class="col-lg-12">
                            <input asp-for="@Model.Photos" class="file-input-custom" data-show-caption="true" data-show-upload="true" accept="image/*" data-fouc>
                        </div>
                        <span class="text-danger" asp-validation-for="@Model.Photos"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input  asp-for="@Model.Count" class="form-control" placeholder="Sayı">
                        <span class="text-danger" asp-validation-for="@Model.Count"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="@Model.Price"  class="form-control" placeholder="Qiymet">
                        <span class="text-danger" asp-validation-for="@Model.Price"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="@Model.Discount" class="form-control" type ="number" step=".1" min="1" max="100" placeholder="Endirim faizi">
                        <span class="text-danger" asp-validation-for="@Model.Discount"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <input asp-for="@Model.CashPrice" class="form-control" placeholder="Nağd alış endirimi">
                        <span  class="text-danger" asp-validation-for="@Model.CashPrice"></span>
                    </div>

                    <div class="mb-3 my-3" id="mainCategory">
                        <p class="mb-2">
                            <select data-placeholder="Əsas Kategoriya Seç" name="MainCtgId" id="MainCtgId" class="form-control select-access-value select2-hidden-accessible" data-fouc="" tabindex="-1" aria-hidden="true">
                                <option></option>
                                @foreach (Category mainCtg in ViewBag.MainCtg)
                                {
                                    <option value="@mainCtg.Id">@mainCtg.Name</option>
                                }
                            </select>
                        </p>
                    </div>
                    <div class="mb-3 my-3" id="ChildCategory">
                        <p class="mb-2">
                            <select data-placeholder="Alt Kategoriya Seç" name="ChildCtgId" id="ChildCtgId" class="form-control select-access-value select2-hidden-accessible" data-fouc="" tabindex="-1" aria-hidden="true">
                            </select>
                        </p>
                    </div>
                    <div class="mb-3 my-3" id="Brand">
                        <p class="mb-2">
                            <select data-placeholder="Brend Seç" name="BrandId" id="BrandId" class="form-control select-access-value select2-hidden-accessible" data-fouc="" tabindex="-1" aria-hidden="true">
                            </select>
                        </p>
                    </div>

                    <button type="submit" class="btn bg-blue">Göndər<i class="icon-paperplane ml-2"></i></button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Script{
    <partial name="_ValidationPartial" />
    <script>
        $(document).ready(function () {
            $(document).on("change", "#MainCtgId", function () {
                /*$("#BrandId").empty();*/
                let mainCtgId = $(this).val();
                $.ajax({
                    url: "/admin/brand/LoadChildCategory?MainCtgId=" + mainCtgId,
                    type: "Get",
                    success: function (res) {
                        $("#ChildCtgId").empty();
                        $("#ChildCtgId").append(res);
                    }
                })
            })
            $(document).on("change", "#ChildCtgId",  function () {
                let childCtgId = $((this)).val();
                console.log(childCtgId)
                $("#BrandId").empty();
                $.ajax({
                    url: "/admin/ProductAn/LoadBrand?ChildCtgId=" + childCtgId,
                    type: "Get",
                    success: function (res) {
                        console.log(res)
                       
                        $("#BrandId").append(res);
                    }
                })
            })

        })
    </script> 
}

