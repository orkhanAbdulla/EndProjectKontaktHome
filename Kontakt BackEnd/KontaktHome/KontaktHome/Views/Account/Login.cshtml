@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<main>
    <div class="login-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Giriş</h1>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="login text-center">
                        <div class="login-form-container">
                            <div class="login-text ">
                                <h2>Daxil ol</h2>
                                <span class="text-muted">Zəhmət olmasa aşağıdakı hesab detallarını daxil edərək daxil olun</span>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="login-form">
                                <form method="post">
                                    <input asp-for="UserName" placeholder="İstifadəçi adı">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                    <input asp-for="Password" placeholder="Şifrə">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <div class="button-box">
                                        <div class="login-toggle-btn">
                                            <input asp-for="RemmemberMe" id="remember">
                                            <label for="remember" class="text-muted">Məni yadda saxla</label>
                                            <a href="#">Şifrənizi Unutdunuz?</a>
                                        </div>
                                        <div class="userpro-clear">
                                            <button type="submit" class="default-btn">Daxil ol</button>
                                            <a asp-action="Register" class="btn btn-light register">Hesab yarat</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

