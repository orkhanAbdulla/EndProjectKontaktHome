@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<main>
    <div class="login-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Giriş</h1>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="login text-center">
                        <div class="login-form-container">
                            <div class="login-text ">
                                <h2>Qeydiyyat</h2>
                                <span class="text-muted">Zəhmət olmasa aşağıdakı hesab detallarını qeyd edərək qeydiyyatdan keçin</span>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="login-form">
                                <form method="post">
                                        <input asp-for="UserName" placeholder="İstifadəçi adı">
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                        <input asp-for="Email" placeholder="Elektron poçt ünvanı">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                        <input asp-for="Password" placeholder="Şifrə">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                        <input asp-for="CheckPassword" placeholder="Şifrənizi təsdiq edin">
                                        <span asp-validation-for="CheckPassword" class="text-danger"></span>
                                    <div class="button-box">
                                        <div class="userpro-clear">
                                            <button type="submit" class="default-btn">Qeydiyyat</button>
                                            <a asp-action="Login" class="btn btn-light register">Daxil ol</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
